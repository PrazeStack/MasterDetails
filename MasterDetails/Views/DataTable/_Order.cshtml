@model List<System.Data.DataRow>
@{
    int itemIndex=0;
    <table class="table" id="detailsTable">
        <thead>
            <tr>
                <th style="width: 25%;">Product</th>
                <th style="width: 20%;">Unit Price</th>
                <th style="width: 15%;">Quantity</th>
                <th style="width: 20%;">Amount</th>
                <th style="width: 10%;"></th>
                <th style="width: 10%;"></th>
            </tr>
        </thead>
        <tbody>
            @{

                for (int a = 0; a < Model.Count; a++)
                {
                    <tr>
                        @{

                            for (int i = 2; i < Model[a].ItemArray.Length; i++)
                            {
                                <td>@Model[a].ItemArray[i]</td>
                            }
                            <td></td>
                            <td><a href="#" onclick="setItemIndex(@a)" @*data-target="#orderDetailsModal" data-toggle="modal"*@>Edit</a></td>


                        }

                    </tr>

                        
                }
            }
        </tbody>
        <tfoot>

            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    <a class="btn btn-info" @*data-target="#orderDetailsModal" data-toggle="modal"*@ id="addMore">Add Detail</a>
                </td>
            </tr>
        </tfoot>
    </table>
    <div class="modal fade" id="orderDetailsModal" role="dialog" tabindex="-1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">

                    <button aria-label="Close" class="close" data-dismiss="modal" type="button"><span aria-hidden="true">×</span></button>


                    <h4 class="modal-title">
                        Order Details
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <input id="detailId" type="hidden" />

                            <label class="control-label col-md-3">
                                Product Name
                            </label>


                            <div class="col-md-9">
                                <input class="form-control" value="@Model[itemIndex].ItemArray[2].ToString()" id="productName" placeholder="Product Name" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">
                                Price
                            </label>


                            <div class="col-md-4">
                                <input class="form-control" value="@Model[itemIndex].ItemArray[3].ToString()" id="price" placeholder="Product Price" type="number">
                            </div>
                            <label class="control-label col-md-2">
                                Quanity
                            </label>


                            <div class="col-md-3">
                                <input class="form-control" value="@Model[itemIndex].ItemArray[4].ToString()" id="quantity" type="number">


                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3 col-lg-offset-9">
                                <a class="btn btn-default" id="addToList">Add To List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}


