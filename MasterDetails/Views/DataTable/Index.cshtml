
@model System.Data.DataTable
@using System.Data;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>

</head>
<h2>Index</h2>
@{ 
    DataTable table = Model;
    int index = new Int32();
    Guid MasterId = Guid.Empty;
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <h2 class="panel-title pull-left">
                <span>
                    Orders
                </span>
            </h2>
            <button class="btn btn-primary pull-right" id="addNewItem" data-toggle="modal" data-target="#newOrderModal" style="margin-right: 5px;">Add New</button>
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-bordered" id="ordersTable">
            <thead>
                <tr>
                    @for (int i = 1; i < table.Columns.Count; i++)
                    {
                        <th>@table.Columns[i].ToString()</th>
                    }

                    <th><a data-toggle="modal" data-target="#newOrderModal"></a></th>
                </tr>
            </thead>
            <tbody>

                @if (Model.Rows.Count > 0)
                {
                    foreach (System.Data.DataRow row in table.Rows)
                    {
                       
                        Guid id = Guid.Parse(row.ItemArray[0].ToString());
                        DateTime time = DateTime.Parse(row.ItemArray[3].ToString());
                        <tr>
                            <td>@row.ItemArray[1]</td>
                            <td>@row.ItemArray[2]</td>
                            <td>@time.ToString("D")</td>

                            <td><a href="#" data-masterId="@id"  onclick="setMasterId()"  data-toggle="modal" data-target="#newOrderModal" class="editDetails">Edit</a></td>

                        </tr>

                    }
                }
                else
                {
                    <tr>
                        <content> No Data Yet (Add New Customer)</content>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

    var items = table.Select($"MasterId = '{MasterId}'").ToList();

<div class="modal fade" id="newOrderModal" role="dialog" tabindex="-1">
<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button aria-label="Close" class="close" data-dismiss="modal" type="button"><span aria-hidden="true">×</span></button>


            <h4 class="modal-title">
                New Order Information
            </h4>
            <h3>
                Order Master
            </h3>


        </div>
        <form id="customerForm">
            <div class="form-horizontal">


                <div class="form-group">
                    <label class="control-label col-md-2">
                        Customer Name
                    </label>


                    <div class="col-md-4">
                        <input class="form-control" id="customerName" placeholder="Customer Name" name="customerName" required type="text">
                    </div>
                    <label class="control-label col-md-2">
                        Address
                    </label>


                    <div class="col-md-4">
                        <input class="form-control" id="customerAddress" placeholder="Customer Address" name="Address" required type="text">
                    </div>
                    <input id="orderMasterId" type="hidden">
                </div>
            </div>
        </form>
        <table class="table" id="detailsTable">
            <thead>
                <tr>
                    <th style="width: 25%;">Product</th>
                    <th style="width: 20%;">Unit Price</th>
                    <th style="width: 15%;">Quantity</th>
                    <th style="width: 20%;">Amount</th>
                    <th style="width: 10%;"></th>
                    <th style="width: 10%;"></th>
                </tr>
             </thead>
            <tbody>
                @{

                    for (int a = 0; a < items.Count; a++)
                    {
                        <tr>
                            @{

                                for (int i = 2; i < items[a].ItemArray.Length; i++)
                                {
                                    <td>@items[a].ItemArray[i]</td>
                                }
                                <td></td>
                                <td><a href="#" onclick="setIndex(@a)" @*data-target="#orderDetailsModal" data-toggle="modal"*@>Edit</a></td>


                            }

                        </tr>


                    }
                }
            </tbody>
            <tfoot>

                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        <a class="btn btn-info" @*data-target="#orderDetailsModal" data-toggle="modal"*@ id="addMore">Add Detail</a>
                    </td>
                </tr>
            </tfoot>
        </table>

        <div class="modal-body" id="newOrderModalbody">


            <hr>
            <h3 id="beforeError" style="margin-top: 10px;">
                Order Details
            </h3>

        </div>
        <div class="modal-footer">
            <button class="btn btn-default" data-dismiss="modal" type="button">Close</button>
            <button class="btn btn-primary" id="saveOrder" type="button">Save Order</button>
        </div>
    </div>
</div>
</div>
<div class="modal fade" id="orderDetailsModal" role="dialog" tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-label="Close" class="close" data-dismiss="modal" type="button"><span aria-hidden="true">×</span></button>


                <h4 class="modal-title">
                    Order Details
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <input id="detailId" type="hidden" />
                        <input id="index" type="hidden" />
                        <label class="control-label col-md-3">
                            Product Name
                        </label>


                        <div class="col-md-9">
                            <input class="form-control" id="productName" placeholder="Product Name" type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Price
                        </label>


                        <div class="col-md-4">
                            <input class="form-control" id="price" placeholder="Product Price" type="number">
                        </div>
                        <label class="control-label col-md-2">
                            Quanity
                        </label>


                        <div class="col-md-3">
                            <input class="form-control" id="quantity" type="number">


                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 col-lg-offset-9">
                            <a class="btn btn-default" id="addToList">Add To List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>

</script>
    }



